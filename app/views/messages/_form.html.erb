<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="row">
    <div class="form-horizontal">
      <div class="form-group">
        <div class="col-xs-2">
          名前<%= f.text_field :name , class: "form-control" , placeholder: "相馬暁広" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-2">
          年齢<%= f.text_field :age , class: "form-control" , placeholder: "20" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-6">
          メッセージ<%= f.text_area :body, class: "form-control", rows: "6", placeholder: "メッセージを書こう！" %>
        </div>
      </div>
      <div class="for-group">
        <%= f.submit value: "送信", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>