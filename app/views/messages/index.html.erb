<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            メッセージ一覧
        </div>
        <div class="panel-body">
            <% @messages.each do |message| %>
                <span class="label label-info"><%= message.name %>(<%= message.age %>)</span>
                <br>
                <%= message.body %>
                <%= link_to "edit", edit_message_path(message) %>
                <%= link_to "destroy", message, method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
                <br>
            <% end %>
        </div>
    </div>
    <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group">
            <div class="col-xs-2">
                名前<%= f.text_field :name , class: "form-control" , placeholder: "相馬暁広" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2">
                年齢<%= f.text_field :age , class: "form-control" , placeholder: "0以上の数字" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-6">
                メッセージ<%= f.text_area :body, class: "form-control", rows: "6", placeholder: "メッセージを書こう！" %>
            </div>
        </div>
        <div class="for-group">
            <%= f.submit value: "送信", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
